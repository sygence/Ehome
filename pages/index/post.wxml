
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="card">
    <view class="weui-cells__title" style="text-align: left;font-size:25rpx;">主题</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input bindinput="contactImput" name="theme" class="weui-input" placeholder="简明的的表达你的观点" style="font-size:28rpx;text-align: left;" />
        </view>
      </view>
    </view>
  </view>

  <view class="card">
    <view class="weui-cells__title" style="text-align: left;font-size:25rpx;">内容</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea bindinput="contentImput" name="content" class="weui-textarea" placeholder="请不要发表违规、违法、反动、反封建的帖子，我们会查水表的~" style="height:150rpx;font-size:28rpx;text-align: left;" />
        </view>
      </view>
    </view>
  </view>

  
  <button class="weui-btn" plain="true" form-type="submit" type="primary" >提交</button>

</form>