<view class="page">
  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="weui-cells__title">完善信息</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" name="name" placeholder="请输入姓名" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">学号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" confirm-type="next" name="stu_id" type="number" placeholder="请输入学号" />
          </view>
        </view>

        <view class="weui-cell weui-cell_radio">
          <view class="weui-cell__hd">
            <view class="weui-label">性别</view>
          </view>
          <radio-group name="gender">
            <label>
              <radio value="0" />男</label>
            <label>
              <radio value="1" />女</label>
          </radio-group>
        </view>

        <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">学院</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindPickerChange" value="{{index}}" name="department" range="{{array}}">
              <view class="picker weui-select weui-select_in-select-after">{{array[department]}}</view>
            </picker>
          </view>
        </view>


         <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">专业</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindPickerChangeMajor" value="{{index}}" name="major" range="{{arrayMajor}}">
              <view class="picker weui-select weui-select_in-select-after">{{arrayMajor[major]}}</view>
            </picker>
          </view>
        </view>

     


        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">班级</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" confirm-type="next" name="class" maxlength="4" type="number" placeholder="请输入班级" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">楼栋</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" confirm-type="next" name="dormitory" maxlength="2" type="number" placeholder="请输入楼栋" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">寝室号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" confirm-type="next" name="room" maxlength="3" type="number" placeholder="请输入寝室号" />
          </view>
        </view>



        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">qq</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" confirm-type="next" name="qqnumber"  type="text" placeholder="请输入qq" />
          </view>
        </view>


        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" confirm-type="done" name="phonenumber" maxlength="11" type="number" placeholder="请输入手机号" />
          </view>

        </view>
      </view>



      <view class="weui-btn-area">
        <button class="weui-btn"  type="primary" plain="true" form-type="submit">确定</button>
      </view>
    </form>
  </view>
</view>